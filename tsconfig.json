{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "strict": true,
        "experimentalDecorators": true,
        "module": "es2015",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "utils/*": ["src/utils/*"],
            "store/*": ["src/store/*"]
        }
    },
    "include": [
        "./src/**/*",
        "./@types/**/*"
    ]
}
